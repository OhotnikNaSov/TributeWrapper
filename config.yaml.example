# ========================================
# Tribute Webhook Server Configuration
# ========================================

# --- Основные настройки сервера ---
server:
  host: "0.0.0.0"  # Слушать на всех интерфейсах (для Docker/VPS)
  port: 8888       # Порт сервера
  debug: false     # true = полный debug лог каждого шага, false = только важные события

# --- API ключ от Tribute ---
tribute:
  api_key: "YOUR_API_KEY_HERE"  # Твой API ключ из Tribute Dashboard

# --- Конвертация валют в донат-валюту (Рины) ---
currency_rates:
  RUB: 0.01    # 100 копеек (1₽) × 0.01 = 1 Рина
  EUR: 1       # 100 центов (1€) × 1 = 100 Рин
  USD: 1       # 100 центов (1$) × 1 = 100 Рин
  UAH: 0.02    # 100 копеек (1₴) × 0.02 = 2 Рины

# --- Настройки базы данных для Tribute логов ---
# Поддерживается: mysql, sqlite, mongodb
tribute_database:
  type: "sqlite"  # mysql, sqlite, mongodb
  
  # SQLite настройки
  sqlite:
    path: "./data/tribute.db"
  
  # MySQL настройки
  mysql:
    host: "localhost"
    port: 3306
    user: "root"
    password: "your_mysql_password"
    database: "tribute"
  
  # MongoDB настройки
  mongodb:
    host: "localhost"
    port: 27017
    database: "tribute"
    # user: "admin"      # раскомментируй если нужна авторизация
    # password: "pass"

# --- Настройки базы данных Minecraft (для донат-валюты - Устарело) ---
# Оставлено для совместимости, но не используется
minecraft_database:
  type: "mysql"  # mysql, sqlite

  # SQLite настройки
  sqlite:
    path: "./data/minecraft.db"

  # MySQL настройки
  mysql:
    host: "localhost"
    port: 3306
    user: "minecraft"
    password: "your_minecraft_db_password"
    database: "minecraft"

  # Настройки таблицы и колонок для CoinsEngine или других Vault плагинов
  table:
    name: "coinsengine_balances"  # Название таблицы с балансами
    player_column: "player_name"   # Колонка с именем игрока (может быть player_uuid для UUID)
    currency_column: "balance"     # Колонка с балансом валюты
    currency_name: "riny"          # Название валюты

# --- Настройки Minecraft RCON (для начисления валюты) ---
# Используется для выполнения команд на сервере Minecraft
minecraft_rcon:
  host: "localhost"         # IP адрес Minecraft сервера
  port: 25575               # RCON порт (стандартный 25575)
  password: "your_rcon_password"  # RCON пароль из server.properties

  # Команда для начисления валюты
  # Доступные плейсхолдеры: %player_name%, %amount%
  command: "eco give %player_name% %amount%"

  # Паттерны успешного выполнения команды (если хоть один найден = успех)
  # Оставь пустым [] если любой ответ считать успехом
  # Поддерживаются плейсхолдеры: {player} - имя игрока, {amount} - количество валюты
  success_patterns:
    - "Added {amount}"
    - "gave {amount}"
    - "successfully"
    - "успешно"

  # Паттерны ошибок (если хоть один найден = ошибка)
  error_patterns:
    - "player not found"
    - "not online"
    - "игрок не найден"
    - "не в сети"
    - "unknown command"
    - "неизвестная команда"
